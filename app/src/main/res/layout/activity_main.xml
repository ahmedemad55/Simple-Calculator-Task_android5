<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_first_num"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:textSize="18sp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_first_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/first_num"
            android:inputType="number"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_second_num"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:textSize="18sp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_second_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/second_num"
            android:inputType="number"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="60dp"
        android:text="@string/tv_operation"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/plus"
            android:text="." />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_minus"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/minus"
            android:text="-" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_division"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/division"
            android:text="."

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiply"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/multiply"
            android:text="." />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="@drawable/tv_result"
        android:textSize="25sp" />


</LinearLayout>